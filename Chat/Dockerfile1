FROM ubuntu:18.04

# install
RUN echo "Installing sudo" && apt-get update && apt-get install -y sudo
RUN echo "Installing curl" && apt-get update && apt-get install curl -y sudo

ENV SCALA_VERSION 2.12.6
ENV SBT_VERSION 1.2.3
ENV JAR_NAME ./target/scala-2.12/ChatNode.jar

# install java
RUN echo "1) Installing oracle java 8" && \
  apt-get update && \
  apt-get install -y --no-install-recommends locales && \
  locale-gen en_US.UTF-8 && \
  apt-get dist-upgrade -y && \
  apt-get --purge remove openjdk* && \
  apt-get install -y gnupg2 && \
  echo "oracle-java8-installer shared/accepted-oracle-license-v1-1 select true" | debconf-set-selections && \
  echo "deb http://ppa.launchpad.net/webupd8team/java/ubuntu xenial main" > /etc/apt/sources.list.d/webupd8team-java-trusty.list && \
  apt-key adv --keyserver keyserver.ubuntu.com --recv-keys EEA14886 && \
  apt-get update && \
  apt-get install -y --no-install-recommends oracle-java8-installer oracle-java8-set-default && \
  apt-get clean all

# install sbt
RUN \
  echo "2) Installing SBT" && \
  curl -L -o sbt-$SBT_VERSION.deb https://dl.bintray.com/sbt/debian/sbt-$SBT_VERSION.deb && \
  dpkg -i sbt-$SBT_VERSION.deb && \
  rm sbt-$SBT_VERSION.deb && \
  apt-get update && \
  apt-get install sbt && \
  sbt sbtVersion

ENV DEBIAN_FRONTEND noninteractive
ENV JAVA_HOME       /usr/lib/jvm/java-8-oracle
ENV LANG            en_US.UTF-8
ENV LC_ALL          en_US.UTF-8


COPY . /
RUN \
    echo "3) Building project" && \
    sbt assembly

ENTRYPOINT ["/run.sh"]
CMD []
